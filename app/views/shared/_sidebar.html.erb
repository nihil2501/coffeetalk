<% @current_organization = @selected_organization || @organization %>
<div class="span3">
  <div class="accordion" id="organization-accordion">
    <div id="reading-list-nav-pill">
      <ul class="nav nav-pills nav-stacked">
        <% if @selected_organization %>
          <li><%= link_to "Reading List", posts_path %></li>
        <% else %>
          <li class="active"><%= link_to "Reading List", posts_path %></li>
        <% end %>
      </ul>
    </div>

    <% @user.organizations.each do |organization| %>
      <div class="accordion-group">
        <div class="accordion-heading">
          <a class="accordion-toggle" data-toggle="collapse" data-parent="#organization-accordion" href="#<%= organization.id %>-collapse">
            <%= organization.name %>
          </a>
        </div>
        <% if @current_organization == organization %>
          <div id="<%= organization.id %>-collapse" class="accordion-body collapse in">
        <% else %>
          <div id="<%= organization.id %>-collapse" class="accordion-body collapse">
        <% end %>
          <div class="accordion-inner">
            <div class="well nav-list-well">
              <ul class="nav nav-list">
                <li class="nav-header">Reading Groups</li>
                <% organization.groups.each do |group| %>
                  <% if @selected_group == group %>
                    <li class="active">
                  <% else %>
                    <li>
                  <% end %>
                  <% if @user.groups.include? group %>
                    <a href="<%= posts_path(group_id: group.id) %>"><%= group.name %><i class="icon-ok-sign pull-right"></i></a></li>
                  <% else %>
                    <a href="<%= posts_path(group_id: group.id) %>"><%= group.name %></a></li>
                  <% end %>
                <% end %>

                <% if @selected_organization == organization and !@selected_group and !@group and !@groups %>
                  <li class="active">
                <% else %>
                  <li>
                <% end %>
                <%= link_to "All", posts_path(organization_id: organization.id) %></li>

                <li class="nav-header">Manage</li>
                <% if @group && @current_organization.id == organization.id %>
                  <li class="active"><%= link_to "Create Group", new_organization_group_path(organization.id) %></li>
                <% else %>
                  <li><%= link_to "Create Group", new_organization_group_path(organization.id) %></li>
                <% end %>

                <% if @groups && @current_organization.id == organization.id %>
                  <li class="active"><%= link_to "Delete Group", organization_groups_path(organization.id) %></li>
                <% else %>
                  <li><%= link_to "Delete Group", organization_groups_path(organization.id) %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>