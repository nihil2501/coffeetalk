<% content_for :sidebar do %>
  <%= render partial: 'shared/sidebar/reading_list', locals: { active: false } %>

  <% current_user.organizations.each do |organization| %>
    <% content_for :edit_organization_li_link do %>
      <%= render partial: 'shared/sidebar/edit_organization', locals: { organization: organization, active: organization == @organization } %>
    <% end %>

    <%= render partial: 'shared/sidebar/organization', locals: { organization: organization, active: organization == @organization } %>
  <% end %>

  <%= render partial: 'shared/sidebar/new_organization', locals: { active: !current_user.organizations.include?(@organization) } %>
<% end %>

<%= render template: 'layouts/application' %>