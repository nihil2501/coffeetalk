<div id="group-actions" class="btn-group">
  <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
    Actions
    <span class="caret"></span>
  </a>

  <ul class="dropdown-menu">
    <li>
      <% if current_user.groups.include? group %>
        <%= link_to "Unsubscribe", group_subscription_path(current_user.group_subscriptions.find_by_group_id(group).id), confirm: "Are you sure?", method: :delete %>
      <% else %>
        <%= link_to "Subscribe", group_subscriptions_path(user_id: current_user.id, group_id: group.id), method: :post %>
      <% end %>
    </li>
    <li>
      <%= link_to "Edit", edit_group_path(group) %>
    </li>
    <li>
      <%= link_to 'Delete', group_path(group), confirm: 'Are you sure?', method: :delete %>
    </li>
  </ul>
</div>