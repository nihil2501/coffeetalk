<div class="row">
  <div class="offset1 span4 well full-form">
    <h2>Edit group</h2>

    <%= form_for @group, url: group_path(@group), html: { method: :put } do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>